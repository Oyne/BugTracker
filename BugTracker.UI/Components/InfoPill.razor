<div class="info-pill"
     style="background-color:@BackgroundColor; color:@TextColor">
    @Text
</div>

@code {
    [Parameter]
    public required string Text { get; set; }
    [Parameter]
    public string? Color { get; set; } = string.Empty;

    private string BackgroundColor => string.IsNullOrEmpty(Color) ? "var(--secondary-container)" : Color;
    private string TextColor => string.IsNullOrEmpty(Color) ? "var(--on-secondary-container)" : "#ffffff";
}
