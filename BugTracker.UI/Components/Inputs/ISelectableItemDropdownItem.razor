<button @onclick="Selected" style="background: @Item.Color">
    @Item.Name
</button>

@code {
    [Parameter]
    public required ISelectableItem Item { get; set; }

    [Parameter]
    public bool IsSelected { get; set; } = false;

    [Parameter] 
    public EventCallback OnSelected { get; set; }

    private async Task Selected()
    {
        await OnSelected.InvokeAsync();
    }
}
