<button @onclick="Selected" style="background: @User.Role?.Color">
    @User.FirstName @User.LastName
</button>

@code {
    [Parameter]
    public required AppUserDTO User { get; set; }

    [Parameter]
    public bool IsSelected { get; set; } = false;

    [Parameter] public EventCallback OnSelected { get; set; }

    private async Task Selected()
    {
        await OnSelected.InvokeAsync();
    }
}
