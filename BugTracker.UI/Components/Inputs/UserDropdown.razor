@if (SelectedUser != null)
{
    <button @onclick="Toggle">@SelectedUser.FullName</button>
}
else
{
    <button @onclick="Toggle">@Title</button>
}

@if (IsToggle && Users != null)
{
    @foreach (var user in Users)
    {
        <UserDropdownItem User="user"
                          IsSelected="Equals(user, SelectedUser)"
                          OnSelected="() => Select(user.Id)" />
    }
}

@code {
    [Parameter]
    public required string Title { get; set; }

    [Parameter]
    public required List<AppUserDTO> Users { get; set; }

    [Parameter]
    public int? SelectedId { get; set; }

    public AppUserDTO? SelectedUser => Users.FirstOrDefault(x => x.Id == SelectedId);

    [Parameter]
    public EventCallback<int?> SelectedIdChanged { get; set; }

    private bool IsToggle { get; set; } = false;

    private void Toggle() => IsToggle = !IsToggle;

    private async Task Select(int id)
    {
        IsToggle = false;

        if (Equals(id, SelectedId))
        {
            await SelectedIdChanged.InvokeAsync(null);
        }
        else
        {
            await SelectedIdChanged.InvokeAsync(id);
        }
    }
}